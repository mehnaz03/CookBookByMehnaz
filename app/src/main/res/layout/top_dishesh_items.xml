<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_100sdp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_margin="@dimen/_10sdp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pudding"
            android:layout_marginStart="@dimen/_120sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_18sp"/>

        <TextView
            android:id="@+id/tvCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvTitle"
            android:layout_below="@id/tvTitle"
            android:text="Category: Desert"
            android:layout_marginTop="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/tvPrepTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvTitle"
            android:layout_below="@+id/tvCategoryName"
            android:text="Preparation Time: 2:00 hr"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvTitle"
            android:layout_below="@+id/tvPrepTime"
            android:layout_marginTop="0dp"
            android:text="Publish Date:4 Septemeber,2019"
            android:layout_marginBottom="@dimen/_5sdp"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
           android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="14dp"
            app:srcCompat="@drawable/favorite_light"
            tools:ignore="VectorDrawableCompat" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>