<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardBackgroundColor="@color/colorYellowLight">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorYellowLight">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_margin="@dimen/_10sdp"
        />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_115sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:text="Lunch"
            android:textSize="@dimen/_11sp"
            android:textColor="@color/colorGreen"
            android:id="@+id/tvCategory"
            android:layout_marginTop="@dimen/_15sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:background="@drawable/rounded_color"
          />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_115sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="Meatball Pasta"
            android:textSize="@dimen/_16sp"
            android:textStyle="bold"
            android:id="@+id/tvFood"
           android:padding="@dimen/_10sdp"
            android:textColor="@color/colorWhite"
            >

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_115sdp"
            android:layout_marginTop="@dimen/_58sdp"
            android:text="Preparation Time: 1 hour"
            android:drawableLeft="@drawable/ic_clock"
           android:drawablePadding="@dimen/_5sdp"
            android:textSize="@dimen/_12sp"
            android:padding="@dimen/_10sdp"
            android:id="@+id/tvTime">

        </TextView>
    </RelativeLayout>

</androidx.cardview.widget.CardView>